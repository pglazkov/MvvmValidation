		</ControlTemplate>
	  
		<Style TargetType="{x:Type TextBox}">
			<Setter Property="Validation.ErrorTemplate"
					Value="{StaticResource DefaultErrorTemplate}" />
		</Style>
	</Application.Resources>
</Application>